<view class="page">
  <view class="avatar">
    <t-avatar image="{{config.avatar}}" size="large" shape="round"></t-avatar>
  </view>

  <view class="t-cell-group-margin">
    <t-cell-group theme="card">
      <t-cell title="昵称" note="{{config.nickname}}" hover arrow></t-cell>
      <t-cell title="Slogan" note="{{config.slogan}}" hover arrow></t-cell>
    </t-cell-group>
  </view>

  <view class="t-cell-group-margin">
    <t-cell-group theme="card">
      <t-cell title="手机号" note="敬请期待" hover></t-cell>
    </t-cell-group>
  </view>
</view>

